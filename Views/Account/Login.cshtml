<section class="login_form padd-2">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="sec-title text-center">
                    <h2>Login <span>Here</span></h2>
                </div>
                <div class="default-form-area">
                    <form id="login-form" name="login_form" class="default-form text-center" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <input asp-for="Email" class="form-control required email" placeholder="Votre Email *" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Password" type="password" class="form-control required" placeholder="Votre Mot de Passe *" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button class="btn-style-one" type="submit" data-loading-text="Please wait...">Se Connecter</button>
                        </div>

                        <div class="form-group text-center">
                            <p><a asp-controller="Account" asp-action="Register">S'inscrire ici</a></p>
                            @* <p><a href="forgot-password.html">Mot de passe oublié?</a></p> *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

