@model List<HotelReservation.Models.Room>

@{
    ViewData["Title"] = "Chambres - @Model.FirstOrDefault()?.RoomType";
}

<div class="inner-banner has-base-color-overlay text-center" style="background: url(/images/background/5.jpg);">
    <div class="container">
        <div class="box">
            <h3>Chambres d'hôtel - @Model.FirstOrDefault()?.RoomType</h3>
        </div>
    </div>
</div>

<div class="breadcumb-wrapper">
    <div class="container">
        <div class="pull-left">
            <ul class="list-inline link-list">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li>
                    <a href="#">Chambres</a>
                </li>
                <li>
                    @Model.FirstOrDefault()?.RoomType
                </li>
            </ul>
        </div>
        @* <div class="pull-right"> *@
        @*     <a href="#" class="get-qoute"><i class="fa fa-share"></i> Share</a> *@
        @* </div> *@
    </div>
</div>

<section class="rooms-section padd-1 style-2">
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Any())
            {
                @foreach (var room in Model)
                {
                    <!-- Room Box -->
                    <div class="col-md-4 col-sm-6 room-box style-2">
                        <div class="inner-box">
                            <div class="image-box">
                                <img src="@(room.Room_Image != null ? "data:image/jpeg;base64," + Convert.ToBase64String(room.Room_Image) : "/images/resource/Pool Villa (general View).jpg")" alt="@room.RoomType" />
                            </div>
                            <!-- Lower Content -->
                            <div class="lower-content">
                                <!-- Rating -->
                                @* <div class="rating"> *@
                                @*     @for (int i = 0; i < room.Rating; i++) *@
                                @*     { *@
                                @*         <span class="fa fa-star"></span> *@
                                @*     } *@
                                @*     @for (int i = room.Rating; i < 5; i++) *@
                                @*     { *@
                                @*         <span class="fa fa-star light"></span> *@
                                @*     } *@
                                @* </div> *@

                                <h3>
                                    <a href="@Url.Action("Details", "Rooms", new { id = room.RoomNumber })">@room.RoomType</a>
                                </h3>
                                <div class="price clearfix">
                                    $@room.RoomPrice <a href="@Url.Action("Book", "Rooms", new { id = room.RoomNumber })">Réserver</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Aucune chambre n'est disponible pour ce type.</p>
            }
        </div>
    </div>
</section>
